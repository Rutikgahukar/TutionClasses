<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Cardwhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbartest"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="8dp"
        android:background="#075e54"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/previous"
            android:layout_marginStart="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/Test"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-RCS sir"
                    android:textSize="14sp"
                    android:textColor="#B3A9A9"
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" +91 1234567890"
                    android:textSize="12sp"
                    android:textColor="#B3A9A9"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center" />
            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/pdf"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:text="Zoology Chapter1-2 .PDF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Published Date: January 1, 2024"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.45AM"
                android:textSize="14sp"
                android:gravity="right"
                android:layout_marginRight="9dp"
                android:textColor="#B3A9A9"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:layout_gravity="right"
            android:layout_marginTop="95dp"
            android:src="@drawable/downloading"/>

    </androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-RCS sir"
                    android:textSize="14sp"
                    android:textColor="#B3A9A9"
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" +91 1234567890"
                    android:textSize="12sp"
                    android:textColor="#B3A9A9"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center" />
            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/doc"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:text="Biology Chapter1-2 .PDF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Published Date: January 1, 2024"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.45AM"
                android:textSize="14sp"
                android:gravity="right"
                android:layout_marginRight="9dp"
                android:textColor="#B3A9A9"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:layout_gravity="right"
            android:layout_marginTop="95dp"
            android:src="@drawable/downloading"/>

    </androidx.cardview.widget.CardView>




</LinearLayout>
