<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/Cardwhite"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbartest"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="8dp"
        android:background="#075e54"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/DetailNamebackArrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/leftarrow"
            android:clickable="true"
            android:contentDescription="TODO"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/SelectedUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Current Affairs"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/CurrentAphaire"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="340dp"
        android:layout_marginTop="11dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ship"
                android:layout_marginBottom="109dp"/>
            <TextView
                android:id="@+id/detail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Text"
                android:padding="3dp"
                android:layout_marginTop="220dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://edition.cnn.com/travel/what-its-like-on-board-the-world-cruise-ship/index.html"
                android:padding="3dp"
                android:layout_marginTop="280dp"
                android:textColor="@color/buyyon"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.45PM"
                android:gravity="right"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="310dp"
                android:textColor="#B3A9A9"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>