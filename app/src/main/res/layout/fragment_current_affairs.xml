<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cardwhite"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ShipCurrentAphaire"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="340dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="8dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ship"
                android:layout_marginBottom="109dp"
                />

            <TextView
                android:id="@+id/detail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Text"
                android:padding="3dp"
                android:layout_marginTop="220dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://edition.cnn.com/travel/what-its-like-on-board-the-world-cruise-ship/index.html"
                android:padding="3dp"
                android:layout_marginTop="280dp"
                android:textColor="@color/buyyon"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.45PM"
                android:gravity="right"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="310dp"
                android:textColor="#B3A9A9"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/InformationCurrentAfaire"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="8dp">



            <TextView
                android:id="@+id/detail_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Text"
                android:padding="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/link1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://edition.cnn.com/travel/what-its-like-on-board-the-world-cruise-ship/index.html"
                android:padding="3dp"
                android:layout_marginTop="70dp"
                android:textColor="@color/buyyon"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.45PM"
                android:gravity="right"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="100dp"
                android:textColor="#B3A9A9"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/AtmosphereCurrentAphaire"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="340dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="8dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/b"
                android:layout_marginBottom="110dp"
                />

            <TextView
                android:id="@+id/detail_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Text"
                android:padding="3dp"
                android:layout_marginTop="220dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/link3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://edition.cnn.com/travel/what-its-like-on-board-the-world-cruise-ship/index.html"
                android:padding="3dp"
                android:layout_marginTop="280dp"
                android:textColor="@color/buyyon"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.45PM"
                android:gravity="right"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="310dp"
                android:textColor="#B3A9A9"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoAphaireDetial"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="8dp">



            <TextView
                android:id="@+id/detail_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Text"
                android:padding="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/link4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://edition.cnn.com/travel/what-its-like-on-board-the-world-cruise-ship/index.html"
                android:padding="3dp"
                android:layout_marginTop="70dp"
                android:textColor="@color/buyyon"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.45PM"
                android:gravity="right"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="100dp"
                android:textColor="#B3A9A9"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
</ScrollView>
